<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:rabbit="http://www.springframework.org/schema/rabbit"
       xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/rabbit http://www.springframework.org/schema/rabbit/spring-rabbit.xsd
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd"
       default-lazy-init="true">
    <!-- 站点 -->
    <bean name="top.cardone.configuration.service.SiteService.mq"
          p:serviceInterface="top.cardone.configuration.service.SiteService"
          p:routingKey="queue:cardone-configuration-${cardone-configuration-version}:top.cardone.configuration.service.SiteService"
          parent="invokerProxyFactoryParnet">
        <property name="amqpTemplate">
            <rabbit:template connection-factory="rabbitConnectionFactory"
                             queue="queue:cardone-configuration-${cardone-configuration-version}:top.cardone.configuration.service.SiteService"
                             exchange="exchange:cardone-configuration-${cardone-configuration-version}:top.cardone.configuration.service.SiteService" reply-timeout="${rabbit.template.replyTimeout:60000}"/>
        </property>
    </bean>
</beans>
<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns="http://www.springframework.org/schema/beans"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd"
       default-lazy-init="true">
    <!-- 错误信息 -->
    <bean id="top.cardone.configuration.dao.ErrorInfoDao"
          class="top.cardone.configuration.dao.impl.ErrorInfoDaoImpl">
        <property name="configTable">
            <map>
                <entry key="config">
                    <map>
                        <entry key="sqlFileRoot" value="/cardone/configuration/errorInfo/"/>
                        <entry key="pks" value="errorInfoId"/>
                        <entry key="codes" value="errorInfoId"/>
                    </map>
                </entry>
                <entry key="insert">
                    <map>
                        <entry key="errorInfoId" value="getRandomUUIDFunc"/>
                        <entry key="createdByCode" value="readCreatedByCodeFunc"/>
                        <entry key="createdDate" value="readCreatedDateFunc"/>
                    </map>
                </entry>
                <entry key="update">
                    <map>
                        <entry key="lastModifiedByCode" value="readLastModifiedByCodeFunc"/>
                        <entry key="lastModifiedDate" value="readLastModifiedDateFunc"/>
                    </map>
                </entry>
            </map>
        </property>
    </bean>

    <!-- 错误信息 -->
    <bean id="top.cardone.configuration.service.ErrorInfoService"
          class="top.cardone.configuration.service.impl.ErrorInfoServiceImpl">
        <property name="dao" ref="top.cardone.configuration.dao.ErrorInfoDao"/>
    </bean>

    <bean parent="messageListenerContainerParnet">
        <property name="messageListener">
            <bean  parent="exceptionParnet">
                <property name="serviceInterface" value="top.cardone.configuration.service.ErrorInfoService"/>
                <property name="service" ref="top.cardone.configuration.service.ErrorInfoService"/>
            </bean>
        </property>
        <property name="destination">
            <bean class="org.apache.activemq.command.ActiveMQQueue">
                <constructor-arg value="top.cardone.configuration.service.ErrorInfoService"/>
            </bean>
        </property>
    </bean>
</beans>
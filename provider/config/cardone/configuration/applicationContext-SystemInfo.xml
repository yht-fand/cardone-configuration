<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns="http://www.springframework.org/schema/beans"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd"
       default-lazy-init="true">
    <!-- 系统信息 -->
    <bean id="top.cardone.configuration.dao.SystemInfoDao"
          class="top.cardone.configuration.dao.impl.SystemInfoDaoImpl">
        <property name="configTable">
            <map>
                <entry key="config">
                    <map>
                        <entry key="sqlFileRoot" value="/cardone/configuration/systemInfo/"/>
                        <entry key="pks" value="systemInfoId"/>
                        <entry key="codes" value="systemInfoId"/>
                    </map>
                </entry>
                <entry key="insert">
                    <map>
                        <entry key="systemInfoId" value="getRandomUUIDFunc"/>
                        <entry key="createdByCode" value="readCreatedByCodeFunc"/>
                        <entry key="createdDate" value="readCreatedDateFunc"/>
                    </map>
                </entry>
                <entry key="update">
                    <map>
                        <entry key="lastModifiedByCode" value="readLastModifiedByCodeFunc"/>
                        <entry key="lastModifiedDate" value="readLastModifiedDateFunc"/>
                    </map>
                </entry>
            </map>
        </property>
    </bean>

    <!-- 系统信息 -->
    <bean id="top.cardone.configuration.service.SystemInfoService"
          class="top.cardone.configuration.service.impl.SystemInfoServiceImpl">
        <property name="dao" ref="top.cardone.configuration.dao.SystemInfoDao"/>
    </bean>

    <bean parent="messageListenerContainerParnet">
        <property name="messageListener">
            <bean  parent="exceptionParnet">
                <property name="serviceInterface" value="top.cardone.configuration.service.SystemInfoService"/>
                <property name="service" ref="top.cardone.configuration.service.SystemInfoService"/>
            </bean>
        </property>
        <property name="destination">
            <bean class="org.apache.activemq.command.ActiveMQQueue">
                <constructor-arg value="cardone-configuration-${cardone-configuration-version}:top.cardone.configuration.service.SystemInfoService"/>
            </bean>
        </property>
    </bean>
</beans>
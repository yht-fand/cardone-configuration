<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns="http://www.springframework.org/schema/beans"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd"
       default-lazy-init="true">
    <!-- 国际化信息 -->
    <bean id="top.cardone.configuration.dao.I18nInfoDao"
          class="top.cardone.configuration.dao.impl.I18nInfoDaoImpl">
        <property name="configTable">
            <map>
                <entry key="config">
                    <map>
                        <entry key="sqlFileRoot" value="/cardone/configuration/i18nInfo/"/>
                        <entry key="pks" value="i18nInfoId"/>
                        <entry key="codes" value="i18nInfoId"/>
                    </map>
                </entry>
                <entry key="insert">
                    <map>
                        <entry key="i18nInfoId" value="getRandomUUIDFunc"/>
                        <entry key="creator" value="getLoginUserIdFunc"/>
                        <entry key="createDate" value="getNowDateFunc"/>
                    </map>
                </entry>
                <entry key="update">
                    <map>
                        <entry key="modifier" value="getLoginUserIdFunc"/>
                        <entry key="modifyDate" value="getNowDateFunc"/>
                    </map>
                </entry>
            </map>
        </property>
    </bean>

    <!-- 国际化信息 -->
    <bean id="top.cardone.configuration.service.I18nInfoService"
          class="top.cardone.configuration.service.impl.I18nInfoServiceImpl">
        <property name="dao" ref="top.cardone.configuration.dao.I18nInfoDao"/>
    </bean>

    <bean parent="messageListenerContainerParnet">
        <property name="messageListener">
            <bean  parent="exceptionParnet">
                <property name="serviceInterface" value="top.cardone.configuration.service.I18nInfoService"/>
                <property name="service" ref="top.cardone.configuration.service.I18nInfoService"/>
            </bean>
        </property>
        <property name="destination">
            <bean class="org.apache.activemq.command.ActiveMQQueue">
                <constructor-arg value="top.cardone.configuration.service.I18nInfoService"/>
            </bean>
        </property>
    </bean>
</beans>
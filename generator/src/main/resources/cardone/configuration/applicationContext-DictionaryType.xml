<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns="http://www.springframework.org/schema/beans"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd"
       default-lazy-init="true">
    <!-- 字典类别 -->
    <bean id="top.cardone.configuration.dao.DictionaryTypeDao"
          class="top.cardone.configuration.dao.impl.DictionaryTypeDaoImpl">
        <property name="configTable">
            <map>
                <entry key="config">
                    <map>
                        <entry key="sqlFileRoot" value="/cardone/configuration/dictionaryType/"/>
                        <entry key="pks" value="dictionaryTypeId"/>
                        <entry key="codes" value="dictionaryTypeId"/>
                    </map>
                </entry>
                <entry key="insert">
                    <map>
                        <entry key="dictionaryTypeId" value="getRandomUUIDFunc"/>
                        <entry key="creator" value="getLoginUserIdFunc"/>
                        <entry key="createDate" value="getNowDateFunc"/>
                    </map>
                </entry>
                <entry key="update">
                    <map>
                        <entry key="modifier" value="getLoginUserIdFunc"/>
                        <entry key="modifyDate" value="getNowDateFunc"/>
                    </map>
                </entry>
            </map>
        </property>
    </bean>

    <!-- 字典类别 -->
    <bean id="top.cardone.configuration.service.DictionaryTypeService"
          class="top.cardone.configuration.service.impl.DictionaryTypeServiceImpl">
        <property name="dao" ref="top.cardone.configuration.dao.DictionaryTypeDao"/>
    </bean>
</beans>
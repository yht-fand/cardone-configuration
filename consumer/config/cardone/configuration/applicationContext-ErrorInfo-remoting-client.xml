<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:rabbit="http://www.springframework.org/schema/rabbit"
       xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/rabbit http://www.springframework.org/schema/rabbit/spring-rabbit.xsd
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd"
       default-lazy-init="true">
    <!-- 错误信息 -->
    <bean name="top.cardone.configuration.service.ErrorInfoService"
          p:serviceInterface="top.cardone.configuration.service.ErrorInfoService"
          p:routingKey="queue:cardone-configuration-${cardone-configuration-version}:top.cardone.configuration.service.ErrorInfoService"
          parent="invokerProxyFactoryParnet">
        <property name="amqpTemplate">
            <bean parent="rabbitTemplateParnet">
                <property name="queue" value="queue:cardone-configuration-${cardone-configuration-version}:top.cardone.configuration.service.ErrorInfoService"/>
                <property name="exchange" value="exchange:cardone-configuration-${cardone-configuration-version}:top.cardone.configuration.service.ErrorInfoService"/>
            </bean>
        </property>
    </bean>
</beans>
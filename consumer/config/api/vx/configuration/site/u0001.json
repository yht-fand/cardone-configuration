{
  "validation": {
    "rules": {
      "siteId": {
        "required": true
      },
      "name": {
        "required": true,
        "minlength": 4,
        "maxlength": 255
      }
    },
    "messages": {
      "siteId": {
        "required": "站点标识必填"
      },
      "name": {
        "required": "站点名称必填",
        "minlength": "站点名称需{0}个字符以上",
        "maxlength": "站点名称需小于{0}个字符"
      }
    }
  }
}